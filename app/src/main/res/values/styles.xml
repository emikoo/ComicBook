<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorBackground</item>
    </style>

    <style name="MainTitle">
        <item name="fontFamily">@font/acme_title_font</item>
        <item name="android:textSize">@dimen/main_title_size</item>
        <item name="android:layout_marginTop">@dimen/view_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="Title">
        <item name="android:layout_marginTop">@dimen/title_margin_top</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <dimen name="view_margin">8dp</dimen>

    <dimen name="item_margin">4dp</dimen>
</resources>